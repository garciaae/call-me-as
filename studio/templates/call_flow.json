{
  "description": "default-call-flow",
  "states": [
    {
      "name": "Trigger",
      "type": "trigger",
      "transitions": [
        {
          "event": "incomingMessage"
        },
        {
          "event": "incomingCall"
        },
        {
          "event": "incomingConversationMessage"
        },
        {
          "next": "call_user_1",
          "event": "incomingRequest"
        },
        {
          "event": "incomingParent"
        }
      ],
      "properties": {
        "offset": {
          "x": 0,
          "y": 0
        }
      }
    },
    {
      "name": "call_user_1",
      "type": "make-outgoing-call-v2",
      "transitions": [
        {
          "next": "gather_prompt",
          "event": "answered"
        },
        {
          "event": "busy"
        },
        {
          "event": "noAnswer"
        },
        {
          "next": "say_error",
          "event": "failed"
        }
      ],
      "properties": {
        "machine_detection_speech_threshold": "2400",
        "detect_answering_machine": false,
        "send_digits": "",
        "sip_auth_username": "",
        "offset": {
          "x": 130,
          "y": 220
        },
        "recording_status_callback": "",
        "sip_auth_password": "",
        "recording_channels": "dual",
        "timeout": 60,
        "machine_detection": "Enable",
        "trim": "do-not-trim",
        "record": true,
        "machine_detection_speech_end_threshold": "1200",
        "machine_detection_timeout": "30",
        "from": "{{flow.channel.address}}",
        "to": "{{contact.channel.address}}",
        "machine_detection_silence_timeout": "5000"
      }
    },
    {
      "name": "say_error",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "voice": "Polly.Joanna",
        "offset": {
          "x": 390,
          "y": 480
        },
        "loop": 1,
        "say": "We couldn't connect the call. Goodbye.",
        "language": "en-US"
      }
    },
    {
      "name": "http_prompt",
      "type": "make-http-request",
      "transitions": [
        {
          "next": "say_llm_response",
          "event": "success"
        },
        {
          "next": "say_application_error",
          "event": "failed"
        }
      ],
      "properties": {
        "offset": {
          "x": 190,
          "y": 1000
        },
        "method": "POST",
        "content_type": "application/json;charset=utf-8",
        "add_twilio_auth": false,
        "body": "{\n \"prompt\":\"{{widgets.gather_prompt.SpeechResult}}\",\n \"system_prompt\":\"{{flow.data.system_prompt}}\",\n \"history\":\"{{widgets.http_prompt.parsed.history}}\"\n}",
        "url": "https://call-gpt-9889-dev.twil.io/prompt"
      }
    },
    {
      "name": "say_llm_response",
      "type": "say-play",
      "transitions": [
        {
          "next": "gather_prompt",
          "event": "audioComplete"
        }
      ],
      "properties": {
        "voice": "Google.en-US-Neural2-J",
        "offset": {
          "x": 40,
          "y": 1320
        },
        "loop": 1,
        "say": "{{widgets.http_prompt.parsed.response}}",
        "language": "en-US"
      }
    },
    {
      "name": "gather_prompt",
      "type": "gather-input-on-call",
      "transitions": [
        {
          "next": "say_thank_you",
          "event": "keypress"
        },
        {
          "next": "http_prompt",
          "event": "speech"
        },
        {
          "event": "timeout"
        }
      ],
      "properties": {
        "voice": "Google.en-US-Neural2-J",
        "speech_timeout": "2",
        "offset": {
          "x": 190,
          "y": 690
        },
        "loop": 1,
        "finish_on_key": "#",
        "say": "",
        "language": "en-US",
        "stop_gather": false,
        "gather_language": "en-US",
        "profanity_filter": "true",
        "timeout": 16
      }
    },
    {
      "name": "say_thank_you",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "voice": "Google.en-US-Neural2-J",
        "offset": {
          "x": 530,
          "y": 1030
        },
        "loop": 1,
        "say": "<speak>\nThank you.\n</speak>",
        "language": "en-US"
      }
    },
    {
      "name": "say_application_error",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "voice": "Polly.Joanna",
        "offset": {
          "x": 410,
          "y": 1320
        },
        "loop": 1,
        "say": "<speak>\nAn application error has occurred. So long!\n</speak>",
        "language": "en-US"
      }
    }
  ],
  "initial_state": "Trigger",
  "flags": {
    "allow_concurrent_calls": true
  }
}